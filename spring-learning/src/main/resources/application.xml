<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean 	id="userService" 
			class="com.devyu.springLearning.controller.UserService"
			scope="singleton" >

	<property name="userRepository"  ref="userRepository"/>
</bean>

<bean  id="userRepository" 
			class="com.devyu.springLearning.controller.UserRepository"
			scope="singleton" />

<!-- spring 2.5 이후로 추가된 기능(Annotation 방식) -->
<!-- <context:component-scan base-package="com.devyu.springLearning" /> -->

</beans>


